@model IEnumerable<Admin.Models.HandlerModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HandlerList</title>
</head>
<body>
    <p>
        @Html.ActionLink("Add New Handler", "HandlerForm")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.handlerName)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.handlerName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.handlerId }) |
                @Html.ActionLink("Details", "Details", new { id=item.handlerId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.handlerId })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
